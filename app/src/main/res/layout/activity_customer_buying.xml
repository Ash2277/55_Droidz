<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".example.grocery_app.CustomerBuying1">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="351dp"
                android:layout_height="125dp"
                android:layout_gravity="center"
                android:fontFamily="@font/feather_bold_by_typicalbro44_dee263c"
                android:gravity="center"
                android:text="Select from the catergories ."
                android:textColor="#832103"
                android:textSize="24sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.491"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.044" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Special offers!"
                android:fontFamily="@font/feather_bold_by_typicalbro44_dee263c"
                android:textColor="#000000"
                android:textSize="15sp"
                android:layout_marginLeft="20dp"
                >

            </TextView>

            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FFF3E8">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card1"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        app:cardBackgroundColor="#ffffff"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="5dp"
                        app:layout_constraintVertical_bias="0.27">

                        <ImageView
                            android:id="@+id/imageView18"
                            android:layout_width="match_parent"
                            android:layout_height="97dp"
                            app:srcCompat="@drawable/apple" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|right"
                            android:fontFamily="@font/feather_bold_by_typicalbro44_dee263c"
                            android:text="10% off "
                            android:textColor="#000000"
                            android:textSize="20sp"
                            android:textStyle="bold"

                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_margin="2dp"
                            android:fontFamily="@font/feather_bold_by_typicalbro44_dee263c"
                            android:gravity="bottom|right"
                            android:padding="1dp"
                            android:textColor="@color/black"
                            android:text="on purchases over 2kg" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card2"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_gravity="center"
                        app:cardBackgroundColor="#ffffff"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="5dp">

                        <ImageView
                            android:id="@+id/imageView14"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/urud" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|right"
                            android:fontFamily="@font/feather_bold_by_typicalbro44_dee263c"
                            android:text="5% off "
                            android:textColor="#000000"
                            android:textSize="20sp"
                            android:textStyle="bold"

                            />

                        <TextView
                            android:layout_width="104dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_margin="2dp"
                            android:fontFamily="@font/feather_bold_by_typicalbro44_dee263c"
                            android:gravity="bottom|right"
                            android:padding="1dp"
                            android:text="on purchases over 2kg"
                            android:textColor="#000000" />

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card3"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        app:cardBackgroundColor="#ffffff"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="5dp"
                        app:layout_constraintVertical_bias="0.27">

                        <ImageView
                            android:id="@+id/imageView17"
                            android:layout_width="169dp"
                            android:layout_height="match_parent"
                            app:srcCompat="@drawable/basmati" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|right"
                            android:fontFamily="@font/feather_bold_by_typicalbro44_dee263c"
                            android:text="15% off "
                            android:textColor="#000000"
                            android:textSize="20sp"
                            android:textStyle="bold"

                            />

                        <TextView
                            android:layout_width="108dp"
                            android:layout_height="42dp"
                            android:layout_gravity="bottom"
                            android:layout_margin="2dp"
                            android:fontFamily="@font/feather_bold_by_typicalbro44_dee263c"
                            android:gravity="bottom|right"
                            android:padding="1dp"
                            android:text="on purchases over 10kg"
                            android:textColor="@color/black" />


                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card4"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_gravity="center"
                        app:cardBackgroundColor="#ffffff"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="5dp">

                        <ImageView
                            android:id="@+id/imageView3"
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            app:srcCompat="@drawable/flour" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|right"
                            android:fontFamily="@font/feather_bold_by_typicalbro44_dee263c"
                            android:text="20% off "
                            android:textColor="#000000"
                            android:textSize="20sp"
                            android:textStyle="bold"

                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_margin="2dp"
                            android:fontFamily="@font/feather_bold_by_typicalbro44_dee263c"
                            android:gravity="bottom|right"
                            android:textColor="@color/black"
                            android:padding="1dp"
                            android:text="on purchases over 5kg" />


                    </androidx.cardview.widget.CardView>


                </LinearLayout>

            </HorizontalScrollView>

                <GridLayout
                    android:id="@+id/gridview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:columnCount="2"
                    android:foregroundGravity="center"
                    android:rowCount="3">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/button"
                        android:layout_width="170dp"
                        android:layout_height="180dp"
                        android:layout_gravity="center"
                        app:cardBackgroundColor="#ffffff"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="5dp"
                        android:layout_margin="10dp"
                        app:layout_constraintVertical_bias="0.27">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:fontFamily="@font/feather_bold_by_typicalbro44_dee263c"
                            android:padding="20dp"
                            android:text="Fruits"
                            android:textColor="#000000"
                            android:textSize="24sp"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/imageView9"
                            android:layout_width="183dp"
                            android:layout_height="259dp"
                            android:layout_gravity="right"
                            android:clickable="true"
                            android:src="@drawable/fruits" />


                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/button3"
                        android:layout_width="170dp"
                        android:layout_height="180dp"
                        android:layout_gravity="center"
                        app:cardBackgroundColor="#ffffff"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:fontFamily="@font/feather_bold_by_typicalbro44_dee263c"
                            android:padding="17dp"
                            android:text="Vegetables"
                            android:textColor="#000000"
                            android:textSize="22sp"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/imageView"
                            android:layout_width="202dp"
                            android:layout_height="277dp"
                            android:layout_gravity="right"
                            android:clickable="true"
                            android:src="@drawable/vegetables" />


                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/button4"
                        android:layout_width="170dp"
                        android:layout_height="180dp"
                        android:layout_gravity="center"
                        app:cardBackgroundColor="#ffffff"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="5dp"
                        android:layout_margin="10dp">

                        <ImageView
                            android:id="@+id/imageView2"
                            android:layout_width="211dp"
                            android:layout_height="262dp"
                            android:layout_gravity="right"
                            android:src="@drawable/greens" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="108dp"
                            android:layout_gravity="left"
                            android:fontFamily="@font/feather_bold_by_typicalbro44_dee263c"
                            android:padding="20dp"
                            android:text="Greens"
                            android:textColor="#000000"
                            android:textSize="24sp"
                            android:textStyle="bold" />


                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/button6"
                        android:layout_width="170dp"
                        android:layout_height="180dp"
                        android:layout_gravity="center"
                        app:cardBackgroundColor="#ffffff"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="5dp"
                        android:layout_margin="10dp">

                        <TextView
                            android:layout_width="127dp"
                            android:layout_height="83dp"
                            android:layout_gravity="top"
                            android:fontFamily="@font/feather_bold_by_typicalbro44_dee263c"
                            android:padding="20dp"
                            android:text="Rice"
                            android:textColor="#000000"
                            android:textSize="24sp"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/imageView4"
                            android:layout_width="190dp"
                            android:layout_height="316dp"
                            android:layout_gravity="top"
                            android:src="@drawable/rice" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/but2"
                        android:layout_width="170dp"
                        android:layout_height="180dp"
                        android:layout_gravity="center"
                        app:cardBackgroundColor="#ffffff"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="5dp"
                        app:layout_constraintVertical_bias="0.27"
                        android:layout_margin="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:fontFamily="@font/feather_bold_by_typicalbro44_dee263c"
                        android:padding="20dp"
                        android:text="Flour"
                        android:textColor="#000000"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/imageView16"
                            android:layout_width="190dp"
                            android:layout_height="293dp"
                            android:layout_gravity="right"
                            android:clickable="true"
                            android:src="@drawable/flour" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/but1"
                        android:layout_width="170dp"
                        android:layout_height="180dp"
                        android:layout_gravity="center"
                        app:cardBackgroundColor="#ffffff"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="5dp"
                        app:layout_constraintVertical_bias="0.27"
                        android:layout_margin="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:fontFamily="@font/feather_bold_by_typicalbro44_dee263c"
                        android:padding="20dp"
                        android:text="Grains"
                        android:textColor="#000000"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/imageView15"
                            android:layout_width="276dp"
                            android:layout_height="235dp"
                            android:layout_gravity="right"
                            android:clickable="true"
                            android:src="@drawable/grain" />

                    </androidx.cardview.widget.CardView>

                </GridLayout>



        </LinearLayout>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>