<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".example.grocery_app.SellingFlour">

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="900dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-5dp"
        android:layout_marginLeft="-5dp"
        android:layout_marginTop="-4dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="6dp"
        android:orientation="vertical">


      <TextView
          android:id="@+id/textView12"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:fontFamily="@font/feather_bold_by_typicalbro44_dee263c"
          android:text="Sell Flour"
          android:textColor="#0E0E25"
          android:textSize="25dp"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintVertical_bias="0.018" />

      <androidx.cardview.widget.CardView
          android:id="@+id/apples"
          android:layout_width="fill_parent"
          android:layout_height="180dp"
          android:layout_gravity="center"
          android:layout_margin="15dp"
          app:cardElevation="5dp"
          app:cardBackgroundColor="#ffffff"
          app:cardCornerRadius="15dp"
          app:layout_constraintBottom_toTopOf="@+id/mango"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintHorizontal_bias="0.466"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/textView12"
          app:layout_constraintVertical_bias="0.165">
        <TextView
            android:id="@+id/textView1r"
            android:layout_width="185dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:layout_marginTop="-20dp"
            android:fontFamily="@font/feather_bold_by_typicalbro44_dee263c"
            android:text="Enter the Amount in rupees per kg"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="14sp" />

        <TextView
            android:layout_width="182dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:fontFamily="@font/feather_bold_by_typicalbro44_dee263c"
            android:padding="10dp"
            android:text="Wheat"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView1t"
            android:layout_width="117dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="40dp"
            android:padding="20dp"
            android:paddingLeft="20dp"

            android:text="@string/initial" />


        <TextView
            android:id="@+id/textView1pr"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="-20dp"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_gravity="right"
            android:layout_width="203dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/wheatflour" />


      </androidx.cardview.widget.CardView>

      <androidx.cardview.widget.CardView
          android:id="@+id/mango"
          android:layout_width="fill_parent"
          android:layout_height="180dp"
          android:layout_gravity="center"
          android:layout_margin="15dp"
          app:cardElevation="5dp"
          app:cardBackgroundColor="#ffffff"
          app:cardCornerRadius="15dp"
          app:layout_constraintBottom_toTopOf="@+id/oranges"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/apples"
          app:layout_constraintVertical_bias="0.553">

        <TextView
            android:layout_width="189dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:padding="10dp"
            android:text="Rice"
            android:fontFamily="@font/feather_bold_by_typicalbro44_dee263c"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView2pr"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="-20dp"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="" />

        <TextView
            android:id="@+id/textView2t"
            android:layout_width="112dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="40dp"
            android:padding="20dp"
            android:paddingLeft="20dp"
            android:text="@string/initial" />

        <TextView
            android:id="@+id/textView2r"
            android:layout_width="189dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:layout_marginTop="-20dp"
            android:fontFamily="@font/feather_bold_by_typicalbro44_dee263c"
            android:text="Enter the Amount in rupees per kg"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="191dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            app:srcCompat="@drawable/riceflour" />

      </androidx.cardview.widget.CardView>

      <androidx.cardview.widget.CardView
          android:id="@+id/oranges"
          android:layout_width="fill_parent"
          android:layout_height="180dp"
          android:layout_gravity="center"
          android:layout_margin="15dp"
          app:cardElevation="5dp"
          app:cardBackgroundColor="#ffffff"
          app:cardCornerRadius="15dp"
          app:layout_constraintBottom_toTopOf="@+id/melon"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintHorizontal_bias="0.033"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/mango"
          app:layout_constraintVertical_bias="0.95">

        <TextView
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:fontFamily="@font/feather_bold_by_typicalbro44_dee263c"
            android:padding="10dp"
            android:text="Almond"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView3pr"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="-20dp"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="" />

        <TextView
            android:id="@+id/textView3t"
            android:layout_width="112dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="40dp"
            android:padding="20dp"
            android:paddingLeft="20dp"
            android:text="@string/initial" />

        <TextView
            android:id="@+id/textView3r"
            android:layout_width="192dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:layout_marginTop="-20dp"
            android:fontFamily="@font/feather_bold_by_typicalbro44_dee263c"
            android:text="Enter the Amount in rupees per kg"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/imageView12"
            android:layout_width="193dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            app:srcCompat="@drawable/almondflour" />

      </androidx.cardview.widget.CardView>

      <androidx.cardview.widget.CardView
          android:id="@+id/melon"
          android:layout_width="fill_parent"
          android:layout_height="180dp"
          android:layout_gravity="center"
          android:layout_margin="15dp"
          app:cardElevation="5dp"
          app:cardBackgroundColor="#ffffff"
          app:cardCornerRadius="15dp"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintHorizontal_bias="0.033"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/oranges"
          app:layout_constraintVertical_bias="0.95">

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:fontFamily="@font/feather_bold_by_typicalbro44_dee263c"
            android:padding="10dp"
            android:text="All Purpose"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView4r"
            android:layout_width="189dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:layout_marginTop="-20dp"
            android:fontFamily="@font/feather_bold_by_typicalbro44_dee263c"
            android:text="Enter the Amount in rupees per kg"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textView4pr"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="-20dp"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="" />

        <TextView
            android:id="@+id/textView4t"
            android:layout_width="113dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="40dp"
            android:padding="20dp"
            android:paddingLeft="20dp"
            android:text="@string/initial" />

        <ImageView
            android:id="@+id/imageView11"
            android:layout_gravity="right"
            android:layout_width="195dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/allpurpose" />

      </androidx.cardview.widget.CardView>

      <Button
          android:id="@+id/button16"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="CONFIRM"
          app:backgroundTint="#C8631F"
          app:layout_constraintBottom_toTopOf="@+id/apples"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toEndOf="@+id/textView12"
          app:layout_constraintTop_toTopOf="parent" />

      <Button
          android:id="@+id/button17"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginEnd="8dp"
          android:layout_marginRight="8dp"
          android:text="BACK"
          app:backgroundTint="#C8631F"
          app:layout_constraintBottom_toTopOf="@+id/apples"
          app:layout_constraintEnd_toStartOf="@+id/textView12"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>


  </RelativeLayout>
</ScrollView>
