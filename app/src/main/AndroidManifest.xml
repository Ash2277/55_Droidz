<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.grocery_app">
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-feature android:name="android.hardware.telephony" android:required="false" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:fullBackupContent="@xml/full_backup_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Grocery_app"
        tools:ignore="GoogleAppIndexingWarning"
        tools:targetApi="n">

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key"/>
        <meta-data
            android:name="com.bumptech.glide.integration.okhttp3.OkHttpGlideModule"
            android:value="GlideModule" />
        <meta-data
            android:name="com.foursite.glide.GlideConfig"
            android:value="GlideModule" />
        <!-- ACTIVITIES -->
        <activity
            android:name="com.pnuema.android.foursite.fullmap.ui.FullMapActivity"
            android:label="@string/title_activity_full_map">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.pnuema.android.foursite.mainscreen.ui.MainActivity" />
        </activity>
        <activity
            android:name="com.pnuema.android.foursite.details.ui.DetailsActivity"
            android:label="@string/title_activity_details"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name=".BuyingFruits"/>
        <activity android:name=".CustomerBuying" />
        <activity android:name=".RetailerSignup" />
        <activity android:name=".Homepage"/>
        <activity android:name=".Login"/>
        <activity
            android:name=".LogoScreen"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>
</manifest>